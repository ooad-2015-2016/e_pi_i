                    <GradientStop Color="#FFF9AD28" Offset="0.952"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button_Copy" Content="Kupovina" HorizontalAlignment="Left" Margin="486,142,0,0" VerticalAlignment="Top" Foreground="#FF6E3414" FontWeight="Bold" FontSize="16" Height="41" Width="234" Click="Kupovina_Click">
