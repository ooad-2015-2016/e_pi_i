            </Button.Background>
        </Button>
        <Button x:Name="button_Copy2" Content="Kreiranje ponude" HorizontalAlignment="Left" Margin="135,259,0,0" VerticalAlignment="Top" Foreground="#FF6E3414" FontWeight="Bold" FontSize="16" Height="41" Width="234" Click="Button4_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFDE4417" Offset="0"/>
                    <GradientStop Color="#FFFBF229" Offset="1"/>
